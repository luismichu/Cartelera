<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Básica">

        <SwitchPreference
            app:key="night_mode"
            app:title="Modo nocturno"
            app:summary="La aplicación requiere un reinicio"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            app:key="notif"
            app:title="Notificaciones"
            app:summaryOff="Desactivadas"
            app:summaryOn="Activadas"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
